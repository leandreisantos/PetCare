<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_receiver"
        android:layout_width="200dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/pink1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tv_message_receiver"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Sample text"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sender"
        android:layout_width="200dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/green2"
        app:layout_constraintTop_toBottomOf="@id/cv_receiver"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_message_sender"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample text"/>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>